<title>Prosas | Propostas</title>

<p id="notice"><%= notice %></p>

<div class="col-lg-12">
    <h1 class="page-header">Propostas</h1>
</div>
<div class="col-lg-12">
  <div>
    <a class="btn btn-primary pull-right" href="<%= new_proposal_path %>">Adicionar</a><br /><br />
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Início</th>
                <th>Fim</th>
                <th>Cidade</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @proposals.each do |proposal| %>
              <tr>
                <td><%= proposal.name %></td>
                <td><%= proposal.description %></td>
                <td><%= proposal.value %></td>
                <td><%= proposal.start %></td>
                <td><%= proposal.end %></td>
                <td><%= proposal.city %></td>
                <td><%= link_to 'Visualizar', proposal %></td>
                <td><%= link_to 'Editar', edit_proposal_path(proposal) %></td>
                <td><%= link_to 'Deletar', proposal, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>           
</div>
                  