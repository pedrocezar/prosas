  <%= form_with(model: proposal, local: true) do |form| %>
    <% if proposal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(proposal.errors.count, "error") %> proibiu que esta proposta fosse salva:</h2>
        <ul>
        <% proposal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="control-label col-sm-1">Nome</label>
      <div class="col-sm-11">
        <%= form.text_field :name, id: :proposal_name, :required => true %>
      </div>
    </div><br /><br />

    <div class="form-group">
      <label class="control-label col-sm-1">Descrição</label>
      <div class="col-sm-11">
        <%= form.text_area :description, id: :proposal_description, :required => true %>
      </div>
    </div><br /><br />

    <div class="form-group">
      <label class="control-label col-sm-1">Valor</label>
      <div class="col-sm-11">
        <%= form.text_field :value, id: :proposal_value, :required => true %>
      </div>
    </div><br /><br />

    <div class="form-group">
      <label class="control-label col-sm-1">Início</label>
      <div class="col-sm-11">
        <%= form.date_select :start, id: :proposal_start, :required => true %>
      </div>
    </div><br /><br />

    <div class="form-group">
      <label class="control-label col-sm-1">Fim</label>
      <div class="col-sm-11">
        <%= form.date_select :end, id: :proposal_end, :required => true %>
      </div>
    </div><br /><br />

    <div class="form-group">
      <label class="control-label col-sm-1">Cidade</label>
      <div class="col-sm-11">
        <%= form.text_field :city, id: :proposal_city, :required => true %>
      </div>
    </div><br /><br />

    <div class="col-lg-12" style="margin-bottom: 5px; margin-top: 50px;">
      <input type="submit" name="commit" value="Salvar" class="btn btn-primary btn-block">
    </div>

  <% end %>